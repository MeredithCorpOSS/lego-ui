{
  "name": "lego-ui",
  "version": "0.1.0",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.8.1",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint"
    ],
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "*.css": "stylelint"
  }
}
